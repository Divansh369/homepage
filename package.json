{
  "name": "homepage",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && (cd backend && npm install) && (cd frontend/dashboard && npm install) && (cd frontend/admin && npm install)",
    "build": "concurrently --kill-others-on-fail \"npm:build:admin\" \"npm:build:dashboard\"",
    "build:dashboard": "cd frontend/dashboard && npm run build",
    "build:admin": "cd frontend/admin && npm run build",
    "start": "concurrently --kill-others-on-fail \"npm:start:backend\" \"npm:start:dashboard\" \"npm:start:admin\"",
    "start:backend": "cd backend && npm start",
    "start:dashboard": "cd frontend/dashboard && npm run dev",
    "start:admin": "cd frontend/admin && npm run dev"
  },
  "workspaces": [
    "backend"
  ],
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
